@model SFA.DAS.ProviderApprenticeshipsService.Web.Models.Account.ChangeOfDetailsViewModel
@{
    ViewBag.Title = "Change your DfE Sign-in account details";
    ViewBag.PageID = "change-your-DfESign-in-account-details";
}
@section breadcrumb {
    <div class="breadcrumbs">
        <p class="govuk-!-margin-top-3">
            <a href="javascript:window.history.back();" class="govuk-back-link">Back</a>
        </p>
    </div>
}
<h1 class="govuk-heading-l">Change your DfE Sign-in account details</h1>
<p class="govuk-!-margin-left-3">You use DfE Sign-in to access Apprenticeship service for training providers.</p>
<p class="govuk-!-margin-left-3">You can change these details in your DfE Sign-in account:</p>
<ul class="govuk-list govuk-list--bullet govuk-!-margin-left-3">
    <li>email address</li>
    <li>password</li>
</ul>
<p><a target="_blank" rel="noopener noreferrer" href="@Model.ProfilePageLink" class="das-navigation__link">Change your sign-in details for your DfE Sign-in account (opens in new tab)</a>.</p>