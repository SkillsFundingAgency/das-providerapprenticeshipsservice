@model SFA.DAS.ProviderApprenticeshipsService.Web.Models.AccountHomeViewModel

@{
    ViewBag.Title = Model.ProviderName;
    ViewBag.PageId = "account-home";
}

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="border: 5px solid pink; text-align: center; padding: 20px; margin-top: 20px;">
        @Model.Message
    </p>
}

<div class="grid-row">
    <div class="column-full home-page">
        <h1 class="heading-xlarge">@Model.ProviderName</h1>
        <p class="grey-text">UKPRN: @Model.ProviderId</p>
        <hr class="hr-double">
    </div>
</div>

<div class="grid-row">
    <div class="column-two-thirds">
        <div class="grid-row">
                <div class="column-one-half">
                    <h2 class="heading-medium">
                        <a href="@Url.Action("Cohorts", "Commitment", new {providerId = Model.ProviderId})">Your cohorts</a>
                    </h2>
                    <p>Review, edit, approve and add apprentices to new cohorts.
                    </p>
                    <hr />
                </div>

            <div class="column-one-half">
                <h2 class="heading-medium">
                    <a href="@Url.Action("Index", "ManageApprentices", new {providerId = Model.ProviderId})">Manage your apprentices</a>
                </h2>
                <p>
                    View and update approved apprentice records.
                </p>
                <hr />
            </div>
          </div>
    </div>
</div>

<div class="grid-row">
    <div class="column-two-thirds">
        <div class="panel panel-border-wide">
            <h3 class="heading-medium">Getting started</h3>
            <p>
              The employer must do the following in their account before any cohorts or apprentices can appear in your account:
            </p>
            <ul class="list list-bullet">
                <li>add their PAYE schemes - so levy funds can credit their account</li>
                <li>add their organisations and sign agreements for each of these organisations - so they can spend their levy funds</li>
                <li>start the "add an apprentice" process - so they can authorise payments to you </li>
            </ul>
            <p>The <a href="https://www.gov.uk/guidance/manage-apprenticeship-funds" target="_blank" title="Register to manage your apprenticeship funds">register to manage your apprenticeship funds</a> guide contains more information about the steps employers need to follow.</p>
        </div>
    </div>
</div>



