@model SFA.DAS.ProviderApprenticeshipsService.Web.Models.ApprenticeshipViewModel

@section Scripts {
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryvalcustom")
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Add apprentice</h1>
        <p>Add the details of your apprentice below. If you don't have the information now you can leave it blank and add it later.</p>
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <form method="POST" action="@Url.Action("Create")">
            @Html.AntiForgeryToken()
            @Html.Partial("ValidationSummary", Html.ViewData.ModelState)
         
            <div class="form-group">
                <label class="form-label" for="FirstName">First name</label>
                <input class="form-control form-control-3-4" id="FirstName" name="FirstName" type="text"
                       aria-required="true" value="@Model.FirstName" />
            </div>
            <div class="form-group">
                <label class="form-label" for="LastName">Last name</label>
                <input class="form-control form-control-3-4" id="LastName" name="LastName" type="text"
                       aria-required="true" value="@Model.LastName" />
            </div>
           
            <!--input controls html format -->
            <div class="form-group error">
                <label for="example-full-name" id="error-full-name">
                    <span class="form-label-bold">Unique learner number</span>  
                    <span class="error-message" id="error-message-full-name">Error message about full name goes here</span>
                </label>
                <input class="form-control" id="example-full-name" name="fullName" value="" aria-describedby="error-message-full-name" type="number">
            </div>
            <!--input controls html format -->
            
             <div class="form-group @Html.AddClassIfPropertyInError(x => x.ULN, "error")">
                @Html.LabelFor(m => m.ULN, "Unique learner number", new { @class = "form-label" })
          
                @Html.ValidationMessageFor(m => m.ULN, null, new { id = "error-message-" + Html.IdFor(m => m.ULN) })
                @Html.TextBoxFor(m => m.ULN, new { @class = "form-control form-control-3-4", type = "number" })
                <hr />
            </div>
            
            <div class="form-group @Html.AddClassIfPropertyInError(x => x.Cost, "error")">
                @Html.LabelFor(m => m.Cost, "Cost", new { @class = "form-label" })
                @Html.ValidationMessageFor(m => m.Cost, null, new { id = "error-message-" + Html.IdFor(m => m.Cost) })
                <b>£</b>@Html.TextBoxFor(m => m.Cost, new { @class = "form-control form-control-3-4", type = "number" })
                <hr />
            </div>
            <div class="form-group">
                <label class="form-label" for="TrainingId">Training</label>
                <select name="TrainingId" id="TrainingId" class="form-control" aria-label="Training standard">
                    <option value=""></option>
                    @foreach (var standard in ViewBag.ApprenticeshipProducts)
                    {
                        <option value="@standard.Name">@standard.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="form-label-bold">Projected start date</span>
                    </legend>
                    <div class="form-date">
                        <div class="form-group form-group-month">
                            <label class="form-label" for="startMonth">Month</label>
                            <input class="form-control" id="startMonth" name="startMonth" type="number"
                                   min="1" max="12" placeholder="MM" value="@Model.StartMonth">
                        </div>
                        <div class="form-group form-group-year">

                            <label class="form-label" for="startYear">Year</label>
                            <input class="form-control" id="startYear" name="startYear" type="number"
                                   min="2016" max="2030" placeholder="YYYY" value="@Model.StartYear">
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="form-label-bold" style="margin-bottom: 0; padding-bottom: 0">Projected finish date</span>
                    </legend>
                    <div class="form-date">
                        <div class="form-group form-group-month">
                            <label class="form-label" for="endMonth">Month</label>
                            <input class="form-control" id="endMonth" name="endMonth" type="number"
                                   min="1" max="12" placeholder="MM" value="@Model.EndMonth">
                        </div>
                        <div class="form-group form-group-year">
                            <label class="form-label" for="endYear">Year</label>
                            <input class="form-control" id="endYear" name="endYear" type="number"
                                   min="2016" max="2030" placeholder="YYYY" value="@Model.EndYear">
                        </div>
                    </div>
                </fieldset>
            </div>
            <input type="hidden" id="status" name="status" value="@Model.Status" />
            <input type="hidden" id="agreementStatus" name="agreementStatus" value="@Model.AgreementStatus" />
            <input type="hidden" id="providerId" name="providerId" value="@Model.ProviderId" />
            <input type="hidden" id="commitmentId" name="commitmentId" value="@Model.CommitmentId" />
            <button type="submit" class="button">Add apprentice</button>
        </form>
    </div>
</div>
