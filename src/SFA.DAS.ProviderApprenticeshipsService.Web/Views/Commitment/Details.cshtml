@using SFA.DAS.ProviderApprenticeshipsService.Web.Extentions
@model SFA.DAS.ProviderApprenticeshipsService.Web.Models.CommitmentViewModel

<div class="grid-row">
    <div class="column-full">
        <a href="@Url.Action("Index", new { providerId = Model.Commitment.ProviderId })" aria-label="Back" class="link-back">Back</a>

        <h1 class="heading-xlarge">Add apprentices</h1>
    </div>

</div>

<div class="grid-row">
    <div class="column-one-half employer-details">
        <p><span class="strong">Employer: </span>@Model.Commitment.EmployerAccountName</p>
        <p><span class="strong">Reference: </span>@Model.Commitment.Name</p>
        <p><span class="strong">Status: </span>@Model.Commitment.Status.GetDescription()</p>
    </div>

    <div class="column-one-half employer-details">
        <p class="strong">Last message / Instructions:</p>
        <p>No note added</p>

    </div>
</div>

<div class="grid-row">
    <div class="column-full">
        <p class="heading-medium">3 Apprentices (.net )</p>
        <hr />
        <a href="@Url.Action("Create", new { providerId = Model.Commitment.ProviderId, commitmentId = Model.Commitment.Id })"
           class="button" name="commitment" aria-label="Add an apprentice">Add an apprentice</a>
            <a class="button finishEditingBtn" href="@Url.Action("FinishEditing", new { providerId = Model.Commitment.ProviderId })" aria-label="Finished editing">Finish editing</a>
        <hr />
    </div>
</div>

<div class="grid-row">
    <div class="column-full">
        @if (Model.Commitment.Apprenticeships.Count == 0)
        {
            <div id="addApprenticesEmptyState" class="emptyState">
                <div class="emptyStateAlert">
                    <div class="emptyStateCopyDetails" aria-label="Information">
                        <p> You haven't added any apprentices yet. Use the options on this page to add apprentices or finish editing.</p>

                    </div>
                </div>
                <div class="responsive-tbody">
                    @foreach (var apprenticeship in Model.Commitment.Apprenticeships)
                    {
                        <div class="responsive-tr">
                            <div class="responsive-td">
                                <div class="responsive-inner-caption">ApprenticeshipName</div>
                                <div>@apprenticeship.ApprenticeshipName</div>
                            </div>
                            <div class="responsive-td">
                                <div class="responsive-inner-caption">Training</div>
                                <div>@apprenticeship.TrainingName</div>
                            </div>
                            <div class="responsive-td">
                                <div class="responsive-inner-caption">Status</div>
                                <div>@apprenticeship.Status.GetDescription()</div>
                            </div>
                            <div class="responsive-td">
                                <div>
                                    <a href="@Url.Action("Edit", new { providerId = Model.Commitment.ProviderId, commitmentId = Model.Commitment.Id, apprenticeshipId = apprenticeship.Id })"
                                       class="button" aria-label="Edit an apprentice">View</a>


                                </div>
                                <div class="responsive-inner-caption"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <table class="tableResponsive providerList">
                <thead>
                <tr>

                    <th scope="col">Name</th>
                    <th scope="col">ULN</th>
                    <th scope="col">Training name</th>
                    <th scope="col">Training dates</th>
                    <th scope="col" colspan="2">Cost</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Commitment.Apprenticeships)
                    {
                        <tr>
                            <td>@item.FirstName + " " + @item.LastName</td>
                            <td>@item.ULN</td>
                            <td>@item.TrainingName</td>
                            <td>@item.StartDate to @item.EndDate</td>
                            <td>@item.Cost</td>
                            <td><a href="#">Edit</a> </td>

                        </tr>
                    }
                </tbody>
            </table>

            <p>
                <a href="@Url.Action("Create", new { providerId = Model.Commitment.ProviderId, commitmentId = Model.Commitment.Id })"
                   class="button" name="commitment" aria-label="Add an apprentice">Add an apprentice</a>
            </p>
        }
    </div>
</div>




