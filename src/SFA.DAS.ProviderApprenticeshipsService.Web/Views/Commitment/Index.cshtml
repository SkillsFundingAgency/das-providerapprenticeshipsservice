<div class="grid-row">
    <div class="column-full">
       
            <a href="@Url.Action("Index","Home")" aria-label="Back" class="link-back">Back</a>
 

        <h1 class="heading-xlarge">Requests in progress</h1>

    

        @if (Model.Commitments.Count == 0)
        {
            <div class="emptyStateAlert">
                <div class="emptyStateCopyDetails" aria-label="Information">
                    <p>You don’t have any requests in progress.</p>
                </div>
            </div>

        }
        else
        {


            <table class="tableResponsive employerListing">
                <thead>
                    <tr>
                        <th>Employer</th>
                       
                        <th>Reference</th>

                        <th colspan="2">Status</th>
                    
                    </tr>
                </thead>
                <tbody>
                    @foreach (var commitment in Model.Commitments)
                    {
                        <tr>
                            <td>
                                @commitment.LegalEntityName  &nbsp;
                            </td>
                            <td>
                                @commitment.Name &nbsp;
                            </td>
                            <td>
                               @commitment.Status.GetDescription() &nbsp;
                            </td>
                            
                            <td>
                                <a href="@Url.Action("Details",
                                      new { providerId = commitment.ProviderId, commitmentId = commitment.Id })" title="View  @commitment.LegalEntityName" aria-label="View  @commitment.LegalEntityName">View</a>
                            </td>

                            @*<td>
                                    <form action="@Url.Action("Submit")" method="GET">
                                        <input type="hidden" name="providerId" value="@commitment.ProviderId" />
                                        <input type="hidden" name="commitmentId" value="@commitment.Id" />
                                        <button type="submit" name="commitment">Submit</button>
                                    </form>
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        }

        
    </div>
</div>
