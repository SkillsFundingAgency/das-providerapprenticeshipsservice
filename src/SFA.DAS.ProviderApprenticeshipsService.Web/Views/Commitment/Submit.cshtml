@using SFA.DAS.ProviderApprenticeshipsService.Web.Models

@model SubmitCommitmentViewModel

@{
    ViewBag.Title = "Add instructions";
    ViewBag.PageId = "submit-cohort";
}

<div class="grid-row submit-page">
    <div class="column-two-thirds">

        <a href="@Url.Action("FinishEditing",
                new { providerId = Model.ProviderId, commitmentId = Model.CommitmentId })" aria-label="Back" class="link-back">Back</a>


        <h1 class="heading-xlarge">Add instructions</h1>
           
            <p class="lede">Let <span class="strong">@Model.EmployerName</span> know what you'd like them to do.</p>
         

        <p></p>
        <form method="POST" action="@Url.Action("Submit")">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="form-label strong" for="Message">Instructions (optional)</label>
              
                <textarea class="form-control form-control-3-4 message" id="Message" name="Message"
                          cols="40" rows="10"
                          aria-required="true">@Model.Message</textarea>
            </div>

            @Html.HiddenFor(m => m.ProviderId)
            @Html.HiddenFor(m => m.CommitmentId)
            @Html.HiddenFor(m => m.SaveOrSendStatus)
            <button type="submit" class="button">Send</button>
        </form>
</div>
</div>

