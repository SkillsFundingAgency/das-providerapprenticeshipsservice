@model SFA.DAS.ProviderApprenticeshipsService.Web.Models.DataLock.DataLockMismatchViewModel

@{
    ViewBag.Title = "title";
}


<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Change apprentice details</h1>

        <p>A request will be sent to &lt;Defence Ministry&gt; to approve the following change in the apprenticeship service.</p>

        <table>
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Period</th>
                    <th scope="col">Current</th>
                    <th scope="col">Change to</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Total cost of training</td>
                    <td>4th May 2017 to 19th May 2018</td>
                    <td>&pound;6,555</td>
                    <td class="changed-item">&pound;7,000</td>
                </tr>
                <tr>
                    <td>Planned training start date</td>
                    <td>--</td>
                    <td>August 2017</td>
                    <td class="changed-item">July 2017</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="grid-row">
    <div class="column-two-thirds">
        <form>
            <div class="form-group">

                <fieldset>
                    <h2 class="heading-medium">Do you want to request these changes?</h2>
                    <legend class="visually-hidden">How do you want to fix the mismatch?</legend>
                    <div class="form-group">
                        <label class="block-label selection-button-radio" for="match-this">
                            <input id="match-this" name="fixMismatch" type="radio">
                            <span>Yes, request this change</span>
                        </label>

                        <label class="block-label selection-button-radio" for="match-this1">
                            <input id="match-this1" name="fixMismatch" type="radio">
                            <span>No, leave for now</span>
                        </label>
                    </div>
                    <input type="submit" class="button" id="fix-mismatch" value="Finish" />
                </fieldset>
            </div>
        </form>
    </div>
</div>