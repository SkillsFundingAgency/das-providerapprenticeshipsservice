@model string

@{
    ViewBag.Title = "Internal server error - Error 500";

}

<main id="content" role="main" class="error-500">
    <div class="grid-row">
        <div class="column-two-thirds">

            <div class="hgroup">
                <h1 class="heading-xlarge">
                    @if (string.IsNullOrEmpty(Model))
                    {
                        @Html.Raw("An error has occurred");
                    }
                    else
                    {
                        @Model
                    }
                </h1>
            </div>

            <div class="inner">
                <p>
                    This error has been logged and will be investigated.
                </p>
                <p>
                    You can return to the
                    <a href="/">start page</a>
                    to try again.
                </p>
            </div>
        </div>
    </div>
</main>