@model SFA.DAS.ProviderApprenticeshipsService.Web.Models.Error.Error403ViewModel
@{
    ViewBag.Title = "You do not have permission to access this page";
    ViewBag.PageId = "error-403";
    ViewBag.HideNavBar = true;
}
<main id="content" role="main" class="error-403 govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @if (Model.UseDfESignIn)
            {
                <div class="hgroup">
                    <h1 class="govuk-heading-xl">
                        You need a different permission level to view this page
                    </h1>
                </div>
                <div class="inner">
                    <p>
                        To continue, you’ll need to get the permission level of your DfE Sign-in account changed.
                    </p>
                    <p>
                        The DfE Sign-in approver inside your organisation can do this for you. You can find out who your approver is under <a href="@Model.HelpPageLink" target="_blank" rel="noopener noreferrer">the organisation section of your DfE Sign-in account.</a>
                    </p>
                    <p>
                        If you came here by mistake, go back to the <a href="@Url.Action("Index", "Account")">homepage of Manage apprenticeships for training providers.</a>
                    </p>
                </div>
            }
            else
            {
                <div class="hgroup">
                    <h1 class="govuk-heading-xl">
                        You do not have permission to access this page
                    </h1>
                </div>
                <div class="inner">
                    <p>
                        If you think you should have permission to access this page or want to confirm what permissions you have, contact an IdAMS super user.
                    </p>
                    <p>
                        <a href="@Url.Action("Index", "Account")"> Go back to home page </a>
                    </p>
                </div>    
            }
        </div>
    </div>
</main>