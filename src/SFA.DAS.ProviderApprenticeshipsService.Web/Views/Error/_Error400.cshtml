@model string

@{
    ViewBag.Title = "Bad request - Error 400";
    ViewBag.PageId = "error-400";
    ViewBag.HideNavBar = true;
}



<main id="content" role="main" class="error-400 govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="hgroup">
                <h1 class="govuk-heading-xl">
                    @if (string.IsNullOrEmpty(Model))
                    {
                        @Html.Raw("Bad request");
                    }
                    else
                    {
                        @Model
                    }
                </h1>
            </div>

            <div class="inner">
                <p>If you entered a web address please check it was correct.</p>
                <p>
                    You can return to the
                    <a href="/">start page</a>
                    to try again.
                </p>
            </div>
        </div>
    </div>
</main>