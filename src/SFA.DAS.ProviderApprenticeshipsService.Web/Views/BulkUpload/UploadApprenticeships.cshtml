@model SFA.DAS.ProviderApprenticeshipsService.Web.Models.UploadApprenticeshipsViewModel

@{
    ViewBag.Title = "Bulk upload apprentices";
    ViewBag.PageId = "upload-apprenticeships";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Bulk upload apprentices</h1>
        <p>You can only upload files with a .csv extension.</p>

        <details>
            <summary><span class="summary">Help with bulk upload</span></summary>
            <div class="panel panel-border-narrow">
                <p>
                    You must use a csv file to upload apprentice details. Some management information systems can create the file for you. Alternatively, you can download, update and use the <a href="https://test-pas.apprenticeships.sfa.bis.gov.uk/dist/csv/UploadSample.csv">apprentice bulk upload sample file</a>.
                </p>
                <p>The apprentice <a href="https://test-pas.apprenticeships.sfa.bis.gov.uk/dist/csv/UploadSample.csv">bulk upload specification</a> contains more information about each of the fields.</p>
            </div>
        </details>

        <form method="POST" action="@Url.Action("UploadApprenticeships")" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <label class="form-label hidden" for="files-upload">Upload file</label>
            @Html.ValidationMessageFor(m => m.Attachment, null, new { id = "error-message-" + Html.IdFor(m => m.Attachment) })
            <input id="files-upload" accept=".csv" type="file" name="@Html.NameFor(m => m.Attachment)">

            @Html.HiddenFor(m => m.ProviderId)
            @Html.HiddenFor(m => m.HashedCommitmentId)

            <input class="button upload-file-btn" type="submit" value="Upload file">
        </form>

    </div>
</div>


@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">

            <li><a href="@Url.Action("Details", "Commitment")" aria-label="Back" class="back-link">Back</a></li>

        </ol>
    </div>
}