@using SFA.DAS.ProviderApprenticeshipsService.Web.Extensions
@model SFA.DAS.ProviderApprenticeshipsService.Web.Models.UploadApprenticeshipsViewModel

@{
    ViewBag.Title = "Upload apprenticeships unsuccessful";
    ViewBag.PageId = "upload-error";
}

<div class="grid">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Review and fix upload errors</h1>
        <p>Your upload contained the following @Model.Errors.Count() errors. Please review the issues and try again.</p>
    </div>
</div>

@if (!Model.Errors.IsNullOrEmpty())
{
    <div class="grid error-grid">
        <div class="column-two-thirds">
            <div class="panel panel-border-wide alert-default">
                @if (Model.Errors.Count() == 1)
                {
                    <p>1 error found</p>
                }
                else
                {
                    <p>@Model.Errors.Count() errors found</p>
                }
            </div>
        </div>
    </div>
}

@if (!Model.Warnings.IsNullOrEmpty())
{
    <div class="grid warning-grid">
        <div class="column-two-thirds">
            <div class="panel panel-border-wide alert-default">
                @if (Model.Warnings.Count() == 1)
                {
                    <p>1 warning found</p>
                }
                else
                {
                    <p>@Model.Warnings.Count() warnings found</p>
                }
            </div>
        </div>
    </div>
}

<div class="grid">
    <div class="column-two-thirds">
        <hr />
        <details>
            <summary><span class="summary">Help with uploading files</span></summary>
            <div class="panel panel-border-narrow">
                <p>
                    You must use a csv file to upload details.  Some management information systems can create the file for you.  Alternatively, you can download and <a href="sampleCSVfile.csv" title="download apprentice upload template">use the apprentice upload template</a>.
                </p>
            </div>
        </details>

        <form method="POST" action="@Url.Action("UploadApprenticeships")" enctype="multipart/form-data">
            <label class="form-label hidden" for="files-upload">Upload file</label>
            <input id="files-upload" accept=".csv" type="file" name="Attachment">

            @Html.HiddenFor(m => m.ProviderId)
            @Html.HiddenFor(m => m.HashedCommitmentId)

            <input class="button upload-file-btn" type="submit" value="Upload a new file">
         
        </form>


    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">

            <li><a href="@Url.Action("UploadApprenticeships", "BulkUpload")" aria-label="Back" class="back-link">Back</a></li>

        </ol>
    </div>
}